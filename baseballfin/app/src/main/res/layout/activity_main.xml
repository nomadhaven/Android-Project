            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.27" />
    <Spinner
            android:layout_width="137dp"
            android:layout_height="87dp"
            android:id="@+id/spinner3"
            app:layout_constraintTop_toTopOf="parent"
